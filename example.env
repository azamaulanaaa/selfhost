# TINYAUTH_SECRET: (REQUIRED)
# A critical security key for TinyAuth.
# MUST be exactly 32 hexadecimal characters long.
# Generate using:
#   Python: python -c 'import os; print(os.urandom(16).hex())'
#   OpenSSL: openssl rand -hex 16
TINYAUTH_SECRET="YOUR_32_CHAR_HEX_SECRET_HERE"

# TINYAUTH_USERS: (REQUIRED)
# Define user credentials for TinyAuth in the format 'username:hashed-password'.
# Multiple users can be separated by commas (e.g., "user1:hash1,user2:hash2").
# Generate hashed passwords using:
#   docker run -it --rm ghcr.io/steveiliop56/tinyauth:v3 user create --interactive
# Example: TINYAUTH_USERS="admin:$$2a$$10$$tH5JnZZ/sfuLIZbO9xxW6uYwkqSI71GrZ..1aQYPM2viQRgbZLMiO"
TINYAUTH_USERS=""

# CLOUDFLARED_TOKEN: (REQUIRED for Cloudflared)
# Your Cloudflare Tunnel token. Obtain this from your Cloudflare dashboard
# when setting up a tunnel (e.g., part of 'cloudflared tunnel run <TUNNEL_NAME>' command).
CLOUDFLARED_TOKEN=""

# --- Domain Configuration (REQUIRED if using Cloudflared for specific services) ---

# TINYAUTH_DOMAIN: (REQUIRED if TinyAuth is exposed via Cloudflared)
# The fully qualified domain name (FQDN) for TinyAuth (e.g., auth.yourdomain.com).
# Ensure this domain is configured in Cloudflare DNS to point to your Cloudflare Tunnel.
TINYAUTH_DOMAIN=""

# DUFS_DOMAIN: (REQUIRED if DUFS is exposed via Cloudflared)
# The FQDN for DUFS (e.g., files.yourdomain.com).
DUFS_DOMAIN=""

# BACKREST_DOMAIN: (REQUIRED if Backrest is exposed via Cloudflared)
# The FQDN for Backrest (e.g., backups.yourdomain.com).
BACKREST_DOMAIN=""

# ARIA2_DOMAIN: (REQUIRED if Aria2 is exposed via Cloudflared)
# The FQDN for Aria2/AriaNg UI (e.g., downloads.yourdomain.com).
ARIA2_DOMAIN=""

# --- LLDAP Configuration (REQUIRED if using LLDAP) ---

# LLDAP_DOMAIN: (REQUIRED if LLDAP is exposed via Cloudflared)
# The FQDN for your LLDAP instance (e.g., ldap.yourdomain.com).
LLDAP_DOMAIN=""

# LLDAP_JWT_SECRET: (REQUIRED for LLDAP)
# A strong, random key for LLDAP's JWT signing.
# Generate using: openssl rand -base64 32
LLDAP_JWT_SECRET=""

# LLDAP_KEY_SEED: (REQUIRED for LLDAP)
# A random seed for LLDAP key generation.
# Generate using: head /dev/urandom | tr -dc A-Za-z0-9_ | head -c 32 ; echo
LLDAP_KEY_SEED=""

# LLDAP_LDAP_BASE_DN: (REQUIRED for LLDAP)
# The base distinguished name for your LDAP directory (e.g., dc=example,dc=com).
# 'dc=local' is a common default for simple setups.
LLDAP_LDAP_BASE_DN="dc=local"

# LLDAP_LDAP_USER_EMAIL: (REQUIRED for LLDAP initial setup)
# The email address for the initial LLDAP admin user.
LLDAP_LDAP_USER_EMAIL="admin@local"

# LLDAP_LDAP_USER_PASS: (REQUIRED for LLDAP initial setup)
# The password for the initial LLDAP admin user.
LLDAP_LDAP_USER_PASS=""
